<div>
    <div class="list-group list-group-horizontal">
        @foreach (var report in ViewBag.Indicators)
        {
            <a href="InstitutionReport?id=@report.Id&year=@report.Year.Year"
               class="list-group-item list-group-item-action text-center">
                @report.Year.Year
            </a>
        }
